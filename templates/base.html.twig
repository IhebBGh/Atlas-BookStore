{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Atlas Bookshop{% endblock %}</title>
    
    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    {% block stylesheets %}
    <style>
        :root {
            --ink: #1f1b2e;
            --midnight: #2d2a44;
            --paper: #f5efe0;
            --soft-paper: #fbf8f1;
            --accent: #d68a1a;
            --accent-soft: #f3c892;
            --sage: #5c8d89;
            --muted: #807a74;
            /* Primary/secondary fallback for admin styles */
            --primary-color: var(--midnight);
            --secondary-color: var(--accent);
        }
        
        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: radial-gradient(circle at top, rgba(243, 200, 146, 0.25), transparent 45%) fixed,
                        linear-gradient(180deg, #fff 0%, #f8f5ed 60%, #f3efe7 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: var(--ink);
        }
        
        h1, h2, h3, h4, .brand-serif {
            font-family: 'Playfair Display', serif;
            color: var(--midnight);
        }
        
        a {
            color: var(--sage);
        }
        
        main {
            flex: 1;
            width: 100%;
        }
        
        .navbar {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(31, 27, 46, 0.08);
            box-shadow: 0 5px 30px rgba(31, 27, 46, 0.08);
            /* Keep navbar and its dropdowns above page content */
            position: relative;
            z-index: 100000;
        }
        
        .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--midnight) !important;
            letter-spacing: 0.5px;
        }
        
        .nav-link {
            color: var(--muted) !important;
            font-weight: 500;
            letter-spacing: 0.02em;
            transition: all 0.25s ease;
        }
        
        .nav-link:hover,
        .nav-link.active {
            color: var(--ink) !important;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--midnight), var(--ink));
            border: none;
            border-radius: 999px;
            padding: 0.75rem 1.5rem;
            box-shadow: 0 10px 25px rgba(31, 27, 46, 0.25);
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, var(--ink), var(--midnight));
            transform: translateY(-1px);
        }
        
        .btn-outline-primary {
            border-color: var(--midnight);
            color: var(--midnight);
            border-radius: 999px;
            padding: 0.6rem 1.5rem;
        }
        
        .btn-outline-primary:hover {
            background: var(--midnight);
            color: #fff;
        }
        
        .hero-section {
            background: linear-gradient(135deg, rgba(45, 42, 68, 0.95), rgba(92, 141, 137, 0.95));
            color: #fff;
            padding: 4rem 3rem;
            border-radius: 24px;
            box-shadow: 0 35px 60px rgba(31, 27, 46, 0.35);
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        
        .hero-section::after {
            content: "";
            position: absolute;
            inset: 15px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            border-radius: 20px;
            pointer-events: none;
        }
        
        .product-card,
        .floating-card,
        .card {
            border-radius: 20px;
            border: 1px solid rgba(31, 27, 46, 0.08);
            box-shadow: 0 15px 40px rgba(31, 27, 46, 0.08);
            background: #fff;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .product-card:hover,
        .floating-card:hover,
        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 45px rgba(31, 27, 46, 0.15);
        }
        
        .product-card img {
            height: 260px;
            object-fit: cover;
            border-radius: 18px;
            margin-top: 0.75rem;
        }
        
        .badge-genre {
            background: var(--soft-paper);
            color: var(--midnight);
            border-radius: 999px;
            padding: 0.35rem 0.85rem;
            font-size: 0.85rem;
            border: 1px solid rgba(31, 27, 46, 0.1);
        }
        
        .section-heading {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.75rem;
            margin-bottom: 1rem;
        }
        
        .section-heading span {
            font-size: 1rem;
            color: var(--muted);
        }
        
        .alert {
            border-radius: 18px;
            border: 1px solid rgba(31, 27, 46, 0.08);
            box-shadow: 0 8px 18px rgba(31, 27, 46, 0.08);
        }
        
        footer {
            background: var(--midnight);
            color: rgba(255,255,255,0.8);
            margin-top: auto;
            padding: 3rem 0;
            border-top: 1px solid rgba(255,255,255,0.08);
        }
        
        footer h5,
        footer h6 {
            color: #fff;
        }
        
        footer a {
            color: rgba(255,255,255,0.8);
            text-decoration: none;
        }
        
        footer a:hover {
            color: var(--accent-soft);
        }
        
        .text-ink {
            color: var(--midnight) !important;
        }
        
        .text-accent {
            color: var(--accent) !important;
        }
        
        .form-control,
        .form-select {
            border-radius: 14px;
            border-color: rgba(31, 27, 46, 0.2);
            padding: 0.75rem;
        }
        
        .form-control:focus,
        .form-select:focus {
            border-color: var(--sage);
            box-shadow: 0 0 0 0.2rem rgba(92, 141, 137, 0.25);
        }

        /* Ensure navbar dropdowns appear above other content */
        .nav-item.dropdown,
        .dropdown {
            position: relative;
        }

        .dropdown-menu {
            z-index: 99999 !important;
        }

        .dropdown-menu.show {
            z-index: 99999 !important;
        }
        
        @media (max-width: 768px) {
            .hero-section {
                padding: 2.5rem 1.5rem;
            }
            
            .navbar-brand {
                font-size: 1.25rem;
            }
            
            .product-card img {
                height: 210px;
            }
        }
    </style>
    {% endblock %}
</head>
<body>
    {# Include Navbar Component #}
    {% include 'components/navbar.html.twig' %}
    
    {# Main Content Area #}
    <main class="container my-4">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    <i class="bi bi-{% if label == 'success' %}check-circle{% elseif label == 'error' %}x-circle{% elseif label == 'warning' %}exclamation-triangle{% else %}info-circle{% endif %}"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        {# Page Content #}
        {% block body %}{% endblock %}
    </main>
    
    {# Footer #}
    <footer class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5><i class="bi bi-book-half"></i> Atlas Bookshop</h5>
                    <p class="text-muted">
                        Curating timeless literature, contemporary voices, and beautiful editions for every kind of reader.
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('app_home') }}">Home</a></li>
                        <li><a href="{{ path('app_about') }}">Our Story</a></li>
                        <li><a href="{{ path('app_contact') }}">Contact</a></li>
                        <li><a href="#">Reader Club</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Follow Us</h6>
                    <a href="#" class="me-3"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="#" class="me-3"><i class="bi bi-instagram fs-4"></i></a>
                    <a href="#" class="me-3"><i class="bi bi-twitter fs-4"></i></a>
                </div>
            </div>
            <hr class="bg-light">
            <p class="mb-0">&copy; {{ 'now'|date('Y') }} Atlas Bookshop. Crafted with a love for stories.</p>
        </div>
    </footer>
    
    {# Bootstrap JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    {# Custom JavaScript #}
    {% block javascripts %}{% endblock %}
</body>
</html>