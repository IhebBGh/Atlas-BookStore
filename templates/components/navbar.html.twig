{# templates/components/navbar.html.twig #}
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <i class="bi bi-cup-straw"></i> JuiceStore
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'app_home' or app.request.get('_route') == 'homepage' %}active{% endif %}" href="{{ path('app_home') }}">
                        <i class="bi bi-house"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'app_about' %}active{% endif %}" href="{{ path('app_about') }}">
                        <i class="bi bi-info-circle"></i> About
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'app_contact' %}active{% endif %}" href="{{ path('app_contact') }}">
                        <i class="bi bi-envelope"></i> Contact
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') == 'app_search' %}active{% endif %}" href="{{ path('app_search') }}">
                        <i class="bi bi-search"></i> Search
                    </a>
                </li>
                
                {# Cart - Show for everyone #}
                <li class="nav-item">
                    <a class="nav-link position-relative {% if app.request.get('_route') == 'app_cart' %}active{% endif %}" href="{{ path('app_cart') }}">
                        <i class="bi bi-cart"></i> Cart
                        {% if app.session and app.session.get('cart') %}
                            {% set cartCount = 0 %}
                            {% for quantity in app.session.get('cart') %}
                                {% set cartCount = cartCount + quantity %}
                            {% endfor %}
                            {% if cartCount > 0 %}
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    {{ cartCount }}
                                </span>
                            {% endif %}
                        {% endif %}
                    </a>
                </li>
                
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-speedometer2"></i> Admin
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                            <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('admin_product_index') }}"><i class="bi bi-box-seam"></i> Products</a></li>
                            <li><a class="dropdown-item" href="{{ path('admin_product_new') }}"><i class="bi bi-plus-circle"></i> Add Product</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('admin_order_index') }}"><i class="bi bi-bag-check"></i> Orders</a></li>
                            <li><a class="dropdown-item" href="{{ path('admin_message_index') }}"><i class="bi bi-envelope"></i> Messages</a></li>
                            <li><a class="dropdown-item" href="{{ path('admin_analytics') }}"><i class="bi bi-graph-up"></i> Analytics</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('admin_category_index') }}"><i class="bi bi-tags"></i> Categories</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('admin_user_index') }}"><i class="bi bi-people"></i> Users</a></li>
                            <li><a class="dropdown-item" href="{{ path('admin_user_new') }}"><i class="bi bi-person-plus"></i> Add User</a></li>
                        </ul>
                    </li>
                {% endif %}
                
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> {{ app.user.email }}
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="{{ path('app_profile') }}"><i class="bi bi-person"></i> My Profile</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_orders') }}"><i class="bi bi-bag-check"></i> My Orders</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_my_messages') }}"><i class="bi bi-envelope"></i> My Messages</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_wishlist') }}"><i class="bi bi-heart"></i> My Wishlist</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_login' %}active{% endif %}" href="{{ path('app_login') }}">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_register' %}active{% endif %}" href="{{ path('app_register') }}">
                            <i class="bi bi-person-plus"></i> Register
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>