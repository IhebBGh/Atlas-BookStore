{% extends 'base.html.twig' %}

{% block title %}Inscription - Juice & Smoothie Store{% endblock %}

{% block body %}
<style>
    .register-page {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        margin: -20px;
    }
    
    .register-box {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        padding: 50px 40px;
        max-width: 450px;
        width: 100%;
    }
    
    .brand-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 40px;
    }
    
    .register-box h2 {
        text-align: center;
        color: #333;
        font-weight: 700;
        margin-bottom: 10px;
    }
    
    .register-box .subtitle {
        text-align: center;
        color: #666;
        font-size: 14px;
        margin-bottom: 30px;
    }
    
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }
    
    .form-group label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
    }
    
    .form-group input {
        width: 100%;
        padding: 14px 15px 14px 45px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s;
    }
    
    .form-group input:focus {
        border-color: #667eea;
        outline: none;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    
    .input-icon {
        position: absolute;
        left: 15px;
        bottom: 14px;
        color: #999;
        font-size: 18px;
    }
    
    .btn-submit {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        color: white;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
    }
    
    .login-link {
        text-align: center;
        margin-top: 25px;
        padding-top: 25px;
        border-top: 1px solid #e0e0e0;
    }
    
    .login-link a {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
    }
    
    .login-link a:hover {
        color: #764ba2;
    }
    
    .alert {
        border-radius: 10px;
        padding: 12px 15px;
        margin-bottom: 20px;
        border: none;
    }
    
    .eye-icon {
        position: absolute;
        right: 15px;
        bottom: 14px;
        cursor: pointer;
        color: #999;
        font-size: 18px;
    }
    
    .eye-icon:hover {
        color: #667eea;
    }
</style>

<div class="register-page">
    <div class="register-box">
        <div class="brand-icon">üçπ</div>
        <h2>Cr√©er un compte</h2>
        <p class="subtitle">Rejoignez Juice & Smoothie Store</p>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : 'info') }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <form method="post">
            <div class="form-group">
                <label for="email">Adresse email</label>
                <span class="input-icon">üìß</span>
                <input type="email" 
                       id="email" 
                       name="email" 
                       placeholder="exemple@email.com"
                       required 
                       autocomplete="email">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <span class="input-icon">üîí</span>
                <input type="password" 
                       id="password" 
                       name="password" 
                       placeholder="Minimum 8 caract√®res"
                       required 
                       autocomplete="new-password">
                <span class="eye-icon" onclick="togglePassword()">üëÅÔ∏è</span>
            </div>

            <button type="submit" class="btn-submit">S'inscrire</button>
        </form>

        <div class="login-link">
            <span style="color: #666;">D√©j√† membre ?</span>
            <a href="{{ path('app_login') }}">Se connecter</a>
        </div>
    </div>
</div>

<script>
function togglePassword() {
    const passwordInput = document.getElementById('password');
    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
    passwordInput.setAttribute('type', type);
}
</script>
{% endblock %}
