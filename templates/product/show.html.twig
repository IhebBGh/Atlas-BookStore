{% extends 'base.html.twig' %}

{% block title %}{{ product.Nom }} - Atlas Bookshop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .rating-input {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
        }
        .rating-input input {
            display: none;
        }
        .rating-input label {
            font-size: 2rem;
            color: #ddd;
            cursor: pointer;
            transition: color 0.2s;
        }
        .rating-input input:checked ~ label,
        .rating-input label:hover,
        .rating-input label:hover ~ label {
            color: #ffc107;
        }
        .rating-input input:checked ~ label {
            color: #ffc107;
        }
    </style>
{% endblock %}

{% block body %}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
        {% if product.category %}
            <li class="breadcrumb-item"><a href="{{ path('app_category_show', {slug: product.category.slug}) }}">{{ product.category.name }}</a></li>
        {% endif %}
        <li class="breadcrumb-item active">{{ product.Nom }}</li>
    </ol>
</nav>

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                {% if product.image %}
                    <img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top" alt="{{ product.Nom }}" style="height: 500px; object-fit: cover;">
                {% else %}
                    <div style="height: 500px; background: linear-gradient(135deg, #2d2a44, #5c8d89); display: flex; align-items: center; justify-content: center; color: #fff;">
                        <span style="font-size: 6rem;"><i class="bi bi-journal-bookmark"></i></span>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <div class="col-md-6">
            <h1 class="mb-3">{{ product.Nom }}</h1>
            
            <div class="mb-3">
                <span class="h3 text-primary">{{ product.price|number_format(2, ',', ' ') }} TND</span>
            </div>
            
            <div class="mb-3">
                {% if averageRating > 0 %}
                    <div class="mb-2">
                        {% for i in 1..5 %}
                            {% if i <= averageRating|round %}
                                <i class="bi bi-star-fill text-warning"></i>
                            {% elseif i <= averageRating|round(0, 'ceil') %}
                                <i class="bi bi-star-half text-warning"></i>
                            {% else %}
                                <i class="bi bi-star text-warning"></i>
                            {% endif %}
                        {% endfor %}
                        <span class="ms-2">({{ averageRating|number_format(1) }}) - {{ ratingCount }} review(s)</span>
                    </div>
                {% endif %}
            </div>
            
            <div class="mb-3">
                {% if product.isInStock() %}
                    <span class="badge bg-success">In Stock{% if product.stock %} ({{ product.stock }} available){% endif %}</span>
                {% else %}
                    <span class="badge bg-danger">Out of Stock</span>
                {% endif %}
                {% if product.category %}
                    <span class="badge bg-info ms-2">{{ product.category.name }}</span>
                {% endif %}
            </div>
            
            <p class="lead">{{ product.Description }}</p>
            
            <div class="d-flex gap-2 mb-4">
                {% if product.isInStock() %}
                    <form method="post" action="{{ path('app_add_to_cart', {id: product.id}) }}" class="flex-grow-1">
                        <div class="input-group mb-3" style="max-width: 200px;">
                            <label class="input-group-text">Quantity</label>
                            <input type="number" name="quantity" class="form-control" value="1" min="1" {% if product.stock %}max="{{ product.stock }}"{% endif %}>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                {% else %}
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="bi bi-x-circle"></i> Out of Stock
                    </button>
                {% endif %}
                {% if app.user %}
                    {% if inWishlist %}
                        <a href="{{ path('app_wishlist') }}" class="btn btn-danger btn-lg">
                            <i class="bi bi-heart-fill"></i> In Wishlist
                        </a>
                    {% else %}
                        <a href="{{ path('app_wishlist_add', {id: product.id}) }}" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-heart"></i> Add to Wishlist
                        </a>
                    {% endif %}
                {% endif %}
            </div>
            
            {# Review Form #}
            {% if app.user %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Write a Review</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('app_review_create', {id: product.id}) }}">
                            <div class="mb-3">
                                <label class="form-label">Rating</label>
                                <div class="rating-input">
                                    {% for i in 5..1 %}
                                        <input type="radio" name="rating" value="{{ i }}" id="rating{{ i }}" {% if i == 5 %}checked{% endif %}>
                                        <label for="rating{{ i }}" class="star-label">â˜…</label>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Your Review</label>
                                <textarea name="comment" class="form-control" rows="4" required placeholder="Share your experience with this product..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit Review</button>
                        </form>
                    </div>
                </div>
            {% endif %}
            
            {# Reviews Display #}
            {% if reviews is not empty %}
                <div class="mt-4">
                    <h3>Customer Reviews ({{ ratingCount }})</h3>
                    {% for review in reviews %}
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <strong>{{ review.user.email }}</strong>
                                        <div class="text-warning">
                                            {% for i in 1..5 %}
                                                {% if i <= review.rating %}
                                                    <i class="bi bi-star-fill"></i>
                                                {% else %}
                                                    <i class="bi bi-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <small class="text-muted">{{ review.createdAt|date('d/m/Y') }}</small>
                                </div>
                                <p class="mb-0">{{ review.comment }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    {% if relatedProducts is not empty %}
        <div class="mt-5">
            <h3>Related Products</h3>
            <div class="row g-4">
                {% for relatedProduct in relatedProducts %}
                    <div class="col-md-3">
                        {% include 'components/product-card.html.twig' with {'product': relatedProduct} %}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
