{% extends 'base.html.twig' %}

{% block title %}My Orders - Atlas Bookshop{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="brand-serif"><i class="bi bi-bag-check"></i> My Orders</h1>

    {% if orders is empty %}
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox display-1"></i>
            <h4 class="mt-3">No orders yet</h4>
            <p>Your future reads will appear here once you check out.</p>
            <a href="{{ path('app_home') }}" class="btn btn-primary mt-3">Browse Books</a>
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>#{{ order.id }}</td>
                            <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                            <td>{{ order.items|length }} item(s)</td>
                            <td><strong>{{ order.total|number_format(2, ',', ' ') }} TND</strong></td>
                            <td>
                                <span class="badge bg-{% if order.status == 'completed' %}success{% elseif order.status == 'pending' %}warning{% else %}info{% endif %}">
                                    {{ order.status|upper }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('app_order_show', {id: order.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

