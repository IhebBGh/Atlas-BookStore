{% extends 'base.html.twig' %}

{% block title %}Contact Atlas Bookshop{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 floating-card">
                <div class="card-header border-0 bg-white">
                    <h2 class="mb-0 brand-serif">
                        <i class="bi bi-envelope-paper-heart"></i> Send us a note
                    </h2>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Questions about rare editions, bulk orders, or membership perks? Drop us a lineâ€”our booksellers reply within one business day.
                    </p>

                    <form method="POST" action="{{ path('app_contact') }}">
                        <div class="mb-3">
                            <label for="name" class="form-label">
                                <i class="bi bi-person"></i> Your Name <span class="text-danger">*</span>
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="name" 
                                name="name" 
                                value="{% if user %}{{ user.email }}{% endif %}"
                                required
                                placeholder="Enter your name"
                            >
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope"></i> Email Address <span class="text-danger">*</span>
                            </label>
                            <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                name="email" 
                                value="{% if user %}{{ user.email }}{% endif %}"
                                required
                                placeholder="your@email.com"
                            >
                        </div>

                        <div class="mb-3">
                            <label for="subject" class="form-label">
                                <i class="bi bi-tag"></i> Subject <span class="text-danger">*</span>
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="subject" 
                                name="subject" 
                                required
                                placeholder="What is this about?"
                            >
                        </div>

                        <div class="mb-3">
                            <label for="content" class="form-label">
                                <i class="bi bi-chat-left-text"></i> Message <span class="text-danger">*</span>
                            </label>
                            <textarea 
                                class="form-control" 
                                id="content" 
                                name="content" 
                                rows="6" 
                                required
                                placeholder="Tell us more about your inquiry..."
                            ></textarea>
                            <small class="form-text text-muted">Minimum 10 characters required.</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send"></i> Send Message
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="bi bi-geo-alt"></i> Visit Us</h5>
                            <p class="text-muted">
                                Atlas Bookshop<br>
                                borj touil , ariana
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-clock"></i> Browsing Hours</h5>
                            <p class="text-muted">
                                Tuesday - Friday: 11:00 - 19:00<br>
                                Weekends: 10:00 - 18:00
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

