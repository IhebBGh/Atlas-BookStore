{% extends 'base.html.twig' %}

{% block title %}Contact Us - JuiceStore{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header text-white" style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));">
                    <h2 class="mb-0">
                        <i class="bi bi-envelope"></i> Contact Us
                    </h2>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Have a question or feedback? We'd love to hear from you! Fill out the form below and we'll get back to you as soon as possible.
                    </p>

                    <form method="POST" action="{{ path('app_contact') }}">
                        <div class="mb-3">
                            <label for="name" class="form-label">
                                <i class="bi bi-person"></i> Your Name <span class="text-danger">*</span>
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="name" 
                                name="name" 
                                value="{% if user %}{{ user.email }}{% endif %}"
                                required
                                placeholder="Enter your name"
                            >
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope"></i> Email Address <span class="text-danger">*</span>
                            </label>
                            <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                name="email" 
                                value="{% if user %}{{ user.email }}{% endif %}"
                                required
                                placeholder="your@email.com"
                            >
                        </div>

                        <div class="mb-3">
                            <label for="subject" class="form-label">
                                <i class="bi bi-tag"></i> Subject <span class="text-danger">*</span>
                            </label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="subject" 
                                name="subject" 
                                required
                                placeholder="What is this about?"
                            >
                        </div>

                        <div class="mb-3">
                            <label for="content" class="form-label">
                                <i class="bi bi-chat-left-text"></i> Message <span class="text-danger">*</span>
                            </label>
                            <textarea 
                                class="form-control" 
                                id="content" 
                                name="content" 
                                rows="6" 
                                required
                                placeholder="Tell us more about your inquiry..."
                            ></textarea>
                            <small class="form-text text-muted">Minimum 10 characters required.</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg" style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); border: none; color: white;">
                                <i class="bi bi-send"></i> Send Message
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="bi bi-geo-alt"></i> Visit Us</h5>
                            <p class="text-muted">
                                JuiceStore<br>
                                Fresh Juices & Smoothies<br>
                                Your City, Your Country
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-clock"></i> Business Hours</h5>
                            <p class="text-muted">
                                Monday - Friday: 9:00 AM - 8:00 PM<br>
                                Saturday - Sunday: 10:00 AM - 6:00 PM
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

