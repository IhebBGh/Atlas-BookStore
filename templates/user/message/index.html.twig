{% extends 'base.html.twig' %}

{% block title %}My Messages - Atlas Bookshop{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="brand-serif"><i class="bi bi-envelope"></i> My Messages</h1>
        <a href="{{ path('app_contact') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Send New Message
        </a>
    </div>

    {% if messages is empty %}
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox display-1"></i>
            <h4 class="mt-3">No messages yet</h4>
            <p>You haven't sent any messages to us yet.</p>
            <a href="{{ path('app_contact') }}" class="btn btn-primary mt-3">Contact Us</a>
        </div>
    {% else %}
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="alert alert-success">
                    <i class="bi bi-info-circle"></i> 
                    <strong>{{ messagesWithResponse }}</strong> of your {{ messages|length }} message{{ messages|length > 1 ? 's have' : ' has' }} received a response from our team.
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Date Sent</th>
                        <th>Status</th>
                        <th>Response</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for message in messages %}
                        <tr class="{{ message.adminResponse ? 'table-success' : '' }}">
                            <td>
                                <strong>{{ message.subject }}</strong>
                                {% if message.content|length > 50 %}
                                    <br><small class="text-muted">{{ message.content|slice(0, 50) }}...</small>
                                {% else %}
                                    <br><small class="text-muted">{{ message.content }}</small>
                                {% endif %}
                            </td>
                            <td>{{ message.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if message.adminResponse %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Replied
                                    </span>
                                {% elseif message.status == 'read' %}
                                    <span class="badge bg-info">
                                        <i class="bi bi-envelope-open"></i> Read
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning">
                                        <i class="bi bi-envelope"></i> New
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                {% if message.adminResponse %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Yes
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-clock"></i> Pending
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_my_message_show', {id: message.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

