{% extends 'base.html.twig' %}

{% block title %}My Wishlist - Atlas Bookshop{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="brand-serif"><i class="bi bi-heart"></i> Saved Titles</h1>

    {% if wishlistItems is empty %}
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-heart display-1"></i>
            <h4 class="mt-3">Your wishlist is empty</h4>
            <p>Tap the heart on any book to save it for later.</p>
            <a href="{{ path('app_home') }}" class="btn btn-primary mt-3">Browse Books</a>
        </div>
    {% else %}
        <div class="row g-4">
            {% for item in wishlistItems %}
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 floating-card border-0">
                        {% if item.product.image %}
                            <img src="{{ asset('uploads/products/' ~ item.product.image) }}" class="card-img-top" alt="{{ item.product.Nom }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div style="height: 200px; background: linear-gradient(135deg, #2d2a44, #5c8d89); display: flex; align-items: center; justify-content: center; color: #fff;">
                                <span style="font-size: 3rem;"><i class="bi bi-book"></i></span>
                            </div>
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a href="{{ path('app_product_show', {id: item.product.id}) }}" class="text-decoration-none text-dark">
                                    {{ item.product.Nom }}
                                </a>
                            </h5>
                            <p class="card-text text-muted small flex-grow-1">
                                {{ item.product.Description|length > 80 ? item.product.Description|slice(0, 80) ~ '...' : item.product.Description }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h5 mb-0 text-ink">{{ item.product.price|number_format(2, ',', ' ') }} TND</span>
                            </div>
                            <div class="d-flex gap-2 mt-auto">
                                <a href="{{ path('app_product_show', {id: item.product.id}) }}" class="btn btn-outline-primary flex-grow-1">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a href="{{ path('app_wishlist_remove', {id: item.id}) }}" class="btn btn-outline-danger" onclick="return confirm('Remove from wishlist?');">
                                    <i class="bi bi-heartbreak"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}

