{% extends 'base.html.twig' %}

{% block title %}My Cart - Atlas Bookshop{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4 brand-serif">ðŸ“š My Reading List</h1>

    {% if cartItems|length > 0 %}
        <div class="row mb-4">
            <div class="col">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Subtotal</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in cartItems %}
                            <tr>
                                <td>{{ item.product.Nom }}</td>
                                <td>
                                    <form method="post" action="{{ path('app_update_cart', {id: item.product.id}) }}">
                                        <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="99" class="form-control w-50 d-inline" />
                                        <button type="submit" class="btn btn-sm btn-outline-primary ms-1">Update</button>
                                    </form>
                                </td>
                                <td>{{ item.product.price|number_format(2, ',', ' ') }} TND</td>
                                <td>{{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} TND</td>
                                <td>
                                    <a href="{{ path('app_remove_from_cart', {id: item.product.id}) }}" 
                                       class="btn btn-sm btn-danger">
                                        Remove
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5>Total: {{ total|number_format(2, ',', ' ') }} TND</h5>
                        <a href="{{ path('app_checkout') }}" class="btn btn-primary w-100">
                            <i class="bi bi-credit-card"></i> Proceed to checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            Your stack is empty.
        </div>
        <div class="text-center mt-4">
            <a href="{{ path('app_home') }}" class="btn btn-outline-primary">Back to books</a>
        </div>
    {% endif %}
</div>
{% endblock %}