{% extends 'base.html.twig' %}

{% block title %}Order Confirmed - Atlas Bookshop{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 floating-card">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-bookmark-check-fill text-success" style="font-size: 80px;"></i>
                    </div>
                    <h1 class="mb-3 brand-serif">Your books are on the way</h1>
                    <p class="lead text-muted mb-4">
                        Thank you for shopping independent. Total paid: <strong>{{ total|number_format(2, ',', ' ') }} TND</strong>.
                    </p>
                    <p class="text-muted mb-4">
                        You'll receive a confirmation email with pickup or delivery details shortly.
                    </p>
                    <div class="mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                            <i class="bi bi-house"></i> Back to the shelves
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

