{% extends 'base.html.twig' %}

{% block title %}Categories - Admin{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-tags"></i> Categories Management</h1>
        <div>
            <a href="{{ path('admin_category_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Category
            </a>
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Dashboard
            </a>
        </div>
    </div>

    {% if categories is empty %}
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-tags display-1"></i>
            <h4 class="mt-3">No categories yet</h4>
            <a href="{{ path('admin_category_new') }}" class="btn btn-primary mt-3">Create First Category</a>
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Products</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td><strong>{{ category.name }}</strong></td>
                            <td>{{ category.description|default('N/A') }}</td>
                            <td>{{ category.products|length }} product(s)</td>
                            <td>
                                <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

