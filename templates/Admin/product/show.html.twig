{% extends 'base.html.twig' %}

{% block title %}Product Details - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-page-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 2rem;
            border-radius: 15px;
            margin-bottom: 2rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        
        .detail-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }
        
        .product-image-large {
            width: 100%;
            max-width: 400px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .product-info h2 {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 1rem;
        }
        
        .info-row {
            padding: 1rem 0;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 600;
            color: #666;
            margin-bottom: 0.5rem;
        }
        
        .info-value {
            color: #333;
            font-size: 1.1rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-4">
    {# Page Header #}
    <div class="admin-page-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0" style="background: transparent; padding: 0;">
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}" class="text-white">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_product_index') }}" class="text-white">Products</a></li>
                <li class="breadcrumb-item active text-white">Details</li>
            </ol>
        </nav>
        <h1 class="mt-2"><i class="bi bi-eye"></i> Product Details</h1>
    </div>

    {# Detail Card #}
    <div class="detail-card">
        <div class="row">
            <div class="col-md-4 text-center mb-4 mb-md-0">
                {% if product.image %}
                    <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                         alt="{{ product.Nom }}" 
                         class="product-image-large">
                {% else %}
                    <div class="product-image-large bg-light d-flex align-items-center justify-content-center">
                        <i class="bi bi-image" style="font-size: 5rem; color: #ccc;"></i>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-8">
                <div class="product-info">
                    <h2>{{ product.Nom }}</h2>
                    
                    <div class="info-row">
                        <div class="info-label">Product ID</div>
                        <div class="info-value">#{{ product.id }}</div>
                    </div>
                    
                    <div class="info-row">
                        <div class="info-label">Price</div>
                        <div class="info-value">
                            <strong class="text-primary" style="font-size: 1.5rem;">{{ product.price }} TND</strong>
                        </div>
                    </div>
                    
                    <div class="info-row">
                        <div class="info-label">Description</div>
                        <div class="info-value">{{ product.Description }}</div>
                    </div>
                    
                    {% if product.updatedAt %}
                        <div class="info-row">
                            <div class="info-label">Last Updated</div>
                            <div class="info-value">{{ product.updatedAt|date('Y-m-d H:i:s') }}</div>
                        </div>
                    {% endif %}
                    
                    <div class="d-flex gap-2 mt-4">
                        <a href="{{ path('admin_product_edit', {id: product.id}) }}" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Product
                        </a>
                        <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <form method="post" action="{{ path('admin_product_delete', {id: product.id}) }}" 
                              class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

