{% extends 'base.html.twig' %}

{% block title %}Message #{{ message.id }} - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border: none;
        }
        
        .card-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            border-radius: 15px 15px 0 0 !important;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-envelope"></i> Message #{{ message.id }}</h1>
        <a href="{{ path('admin_message_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Messages
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            {# Message Details #}
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Message Details</h5>
                    <span class="badge bg-{% if message.status == 'new' %}warning{% elseif message.status == 'read' %}info{% else %}success{% endif %}">
                        {% if message.status == 'new' %}
                            <i class="bi bi-envelope"></i> New
                        {% elseif message.status == 'read' %}
                            <i class="bi bi-envelope-open"></i> Read
                        {% else %}
                            <i class="bi bi-check-circle"></i> Replied
                        {% endif %}
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong><i class="bi bi-person"></i> From:</strong><br>
                        {{ message.name ?? message.user.email ?? 'Anonymous' }}<br>
                        <small class="text-muted">{{ message.email ?? message.user.email ?? 'No email' }}</small>
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-tag"></i> Subject:</strong><br>
                        {{ message.subject }}
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-calendar"></i> Date:</strong><br>
                        {{ message.createdAt|date('d/m/Y H:i:s') }}
                        {% if message.readAt %}
                            <br><small class="text-muted">Read on: {{ message.readAt|date('d/m/Y H:i:s') }}</small>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-chat-left-text"></i> Message:</strong>
                        <div class="border rounded p-3 mt-2 bg-light">
                            {{ message.content|nl2br }}
                        </div>
                    </div>
                </div>
            </div>

            {# Admin Response #}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-reply"></i> Admin Response</h5>
                </div>
                <div class="card-body">
                    {% if message.adminResponse %}
                        <div class="alert alert-success">
                            <strong>Response:</strong><br>
                            {{ message.adminResponse|nl2br }}
                        </div>
                    {% else %}
                        <p class="text-muted">No response yet.</p>
                    {% endif %}

                    <form method="POST" action="{{ path('admin_message_reply', {id: message.id}) }}">
                        <div class="mb-3">
                            <label for="response" class="form-label">Add/Update Response</label>
                            <textarea 
                                class="form-control" 
                                id="response" 
                                name="response" 
                                rows="5" 
                                required
                                placeholder="Enter your response to the customer..."
                            >{{ message.adminResponse ?? '' }}</textarea>
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-send"></i> Save Response
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            {# Actions #}
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
                </div>
                <div class="card-body">
                    {% if message.status == 'new' %}
                        <form method="POST" action="{{ path('admin_message_mark_read', {id: message.id}) }}" class="mb-2">
                            <button type="submit" class="btn btn-info w-100">
                                <i class="bi bi-envelope-open"></i> Mark as Read
                            </button>
                        </form>
                    {% endif %}

                    <form method="POST" action="{{ path('admin_message_delete', {id: message.id}) }}" 
                          onsubmit="return confirm('Are you sure you want to delete this message?');">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash"></i> Delete Message
                        </button>
                    </form>
                </div>
            </div>

            {# Message Info #}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Status:</strong><br>
                        <span class="badge bg-{% if message.status == 'new' %}warning{% elseif message.status == 'read' %}info{% else %}success{% endif %}">
                            {{ message.status|upper }}
                        </span>
                    </p>
                    <p><strong>User Account:</strong><br>
                        {% if message.user %}
                            <a href="{{ path('admin_user_show', {id: message.user.id}) }}">
                                {{ message.user.email }}
                            </a>
                        {% else %}
                            <span class="text-muted">Guest user</span>
                        {% endif %}
                    </p>
                    <p><strong>Created:</strong><br>
                        {{ message.createdAt|date('d/m/Y H:i') }}
                    </p>
                    {% if message.readAt %}
                        <p><strong>Read:</strong><br>
                            {{ message.readAt|date('d/m/Y H:i') }}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

