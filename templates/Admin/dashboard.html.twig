{% extends 'Admin/layout.html.twig' %}

{% block title %}Admin Dashboard - Atlas Bookshop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="m-0"><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
            <div class="text-muted small">Welcome back, {{ app.user.email }}! Here's your store overview.</div>
        </div>
        <div>
            <a href="{{ path('admin_product_new') }}" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Product</a>
        </div>
    </div>

    {# Flash Messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                <i class="bi bi-{% if label == 'success' %}check-circle{% elseif label == 'error' %}x-circle{% elseif label == 'warning' %}exclamation-triangle{% else %}info-circle{% endif %}"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# Key Metrics Cards #}
    <div class="admin-widgets">
        <div class="admin-card">
            <small class="text-muted"><i class="bi bi-box-seam"></i> Total Products</small>
            <div class="h3 mt-2">{{ totalProducts }}</div>
            <a href="{{ path('admin_product_index') }}" class="btn btn-sm btn-link p-0 mt-2">View all â†’</a>
        </div>

        <div class="admin-card">
            <small class="text-muted"><i class="bi bi-people"></i> Total Users</small>
            <div class="h3 mt-2">{{ totalUsers }}</div>
            <div class="small text-muted">{{ adminUsers }} admins, {{ regularUsers }} users</div>
        </div>

        <div class="admin-card">
            <small class="text-muted"><i class="bi bi-bag-check"></i> Total Orders</small>
            <div class="h3 mt-2">{{ totalOrders }}</div>
            <a href="{{ path('admin_order_index') }}" class="btn btn-sm btn-link p-0 mt-2">View all â†’</a>
        </div>

        <div class="admin-card">
            <small class="text-muted"><i class="bi bi-chat-left-text"></i> Messages</small>
            <div class="h3 mt-2">{{ totalMessages }}</div>
            <div class="small text-muted">{{ unreadMessages }} unread</div>
        </div>
    </div>

    {# Main Content Grid #}
    <div class="row g-3">
        {# Recent Orders #}
        <div class="col-lg-6">
            <div class="admin-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="m-0"><i class="bi bi-bag-check"></i> Recent Orders</h5>
                    <a href="{{ path('admin_order_index') }}" class="btn btn-sm btn-link">View all</a>
                </div>
                {% if recentOrders is empty %}
                    <div class="text-center text-muted py-4">
                        <div class="fs-5 mb-2">ðŸ“¦</div>
                        <p>No orders yet</p>
                    </div>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for order in recentOrders[:5] %}
                            <a href="{{ path('admin_order_show', {id: order.id}) }}" class="list-group-item list-group-item-action p-3 border-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold">Order #{{ order.id }}</div>
                                    <div class="small text-muted">{{ order.createdAt ? order.createdAt|date('M d, Y H:i') : 'N/A' }}</div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold">{{ order.totalPrice|default(0) }} TND</div>
                                    <span class="badge bg-info small">{{ order.status|default('pending') }}</span>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        {# Recent Messages #}
        <div class="col-lg-6">
            <div class="admin-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="m-0"><i class="bi bi-chat-left-text"></i> Recent Messages</h5>
                    <a href="{{ path('admin_message_index') }}" class="btn btn-sm btn-link">View all</a>
                </div>
                {% if recentMessages is empty %}
                    <div class="text-center text-muted py-4">
                        <div class="fs-5 mb-2">ðŸ’¬</div>
                        <p>No messages</p>
                    </div>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for message in recentMessages[:5] %}
                            <a href="{{ path('admin_message_show', {id: message.id}) }}" class="list-group-item list-group-item-action p-3 border-0 d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="fw-bold">{{ message.name }}</div>
                                    <div class="small text-muted">{{ message.subject|slice(0, 40) }}...</div>
                                    <div class="small">{{ message.createdAt ? message.createdAt|date('M d, Y') : 'N/A' }}</div>
                                </div>
                                {% if not message.isRead %}
                                    <span class="badge bg-warning ms-2">Unread</span>
                                {% endif %}
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# Bottom Stats Row #}
    <div class="row g-3 mt-2">
        <div class="col-md-6">
            <div class="admin-card">
                <h6 class="mb-3"><i class="bi bi-graph-up"></i> User Distribution</h6>
                <div class="d-flex gap-4">
                    <div>
                        <div class="small text-muted">Admin Users</div>
                        <div class="h5 text-primary mb-0">{{ adminUsers }}</div>
                    </div>
                    <div>
                        <div class="small text-muted">Regular Users</div>
                        <div class="h5 mb-0">{{ regularUsers }}</div>
                    </div>
                    <div class="ms-auto text-end">
                        <div class="small text-muted">Total</div>
                        <div class="h5 mb-0">{{ totalUsers }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="admin-card">
                <h6 class="mb-3"><i class="bi bi-archive"></i> Inventory</h6>
                <div class="d-flex gap-4">
                    <div>
                        <div class="small text-muted">Products</div>
                        <div class="h5 text-success mb-0">{{ totalProducts }}</div>
                    </div>
                    <div class="ms-auto text-end">
                        <a href="{{ path('admin_product_new') }}" class="btn btn-sm btn-outline-primary">Add New</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
