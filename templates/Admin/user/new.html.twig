{% extends 'base.html.twig' %}

{% block title %}Add New User - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-page-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 2rem;
            border-radius: 15px;
            margin-bottom: 2rem;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        
        .form-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            max-width: 600px;
            margin: 0 auto;
        }
        
        .form-card h2 {
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            font-weight: 700;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }
        
        .form-control {
            border-radius: 8px;
            border: 2px solid #e0e0e0;
            padding: 0.75rem 1rem;
            transition: all 0.3s;
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
        }
        
        .form-check-group {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            margin-top: 0.5rem;
        }
        
        .form-check {
            display: flex;
            align-items: center;
            padding: 0.75rem;
            background: #f8f9fa;
            border-radius: 8px;
            border: 2px solid #e0e0e0;
            transition: all 0.3s;
        }
        
        .form-check:hover {
            background: #f0f0f0;
            border-color: var(--primary-color);
        }
        
        .form-check-input {
            width: 1.25rem;
            height: 1.25rem;
            margin-top: 0;
            margin-right: 0.75rem;
            cursor: pointer;
            border: 2px solid #ccc;
            border-radius: 4px;
        }
        
        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .form-check-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
        }
        
        .form-check-label {
            margin-left: 0;
            cursor: pointer;
            font-weight: 500;
            color: #333;
            flex: 1;
        }
        
        .btn-submit {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 600;
            transition: transform 0.3s;
        }
        
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 107, 53, 0.4);
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-4">
    {# Page Header #}
    <div class="admin-page-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0" style="background: transparent; padding: 0;">
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}" class="text-white">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_user_index') }}" class="text-white">Users</a></li>
                <li class="breadcrumb-item active text-white">Add New</li>
            </ol>
        </nav>
        <h1 class="mt-2"><i class="bi bi-person-plus"></i> Add New User</h1>
    </div>

    {# Form Card #}
    <div class="form-card">
        <h2>User Information</h2>
        
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="form-check-group">
                    {% for child in form.roles %}
                        <div class="form-check">
                            {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(form.roles) }}
            </div>

            <div class="form-group">
                {{ form_label(form.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control mb-2'}}) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.plainPassword) }}
                <small class="form-text text-muted">Password must be at least 6 characters long</small>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-submit">
                    <i class="bi bi-check-circle"></i> Create User
                </button>
                <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

