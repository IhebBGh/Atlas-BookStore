{% extends 'base.html.twig' %}

{% block title %}Checkout - JuiceStore{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .checkout-container {
            max-width: 900px;
            margin: 2rem auto;
        }
        .checkout-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            margin-bottom: 1.5rem;
        }
        .order-summary-item {
            display: flex;
            justify-content: space-between;
            padding: 1rem 0;
            border-bottom: 1px solid #eee;
        }
        .order-summary-item:last-child {
            border-bottom: none;
        }
    </style>
    <script>
        document.getElementById('card').addEventListener('change', function() {
            document.getElementById('stripe-form').style.display = this.checked ? 'block' : 'none';
        });
        document.getElementById('cash').addEventListener('change', function() {
            document.getElementById('stripe-form').style.display = this.checked ? 'none' : 'block';
        });
    </script>
{% endblock %}

{% block body %}
<div class="checkout-container">
    <h1 class="mb-4"><i class="bi bi-credit-card"></i> Checkout</h1>

    <form method="post" action="{{ path('app_payment_process') }}">
        <div class="row">
            <div class="col-md-8">
                <div class="checkout-card">
                    <h3>Shipping Information</h3>
                    <div class="form-group mb-3">
                        <label class="form-label">Shipping Address</label>
                        <textarea name="shipping_address" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Billing Address</label>
                        <textarea name="billing_address" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <div class="checkout-card">
                    <h3>Payment Method</h3>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="payment_method" id="cash" value="cash" checked>
                        <label class="form-check-label" for="cash">Cash on Delivery</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="payment_method" id="card" value="card">
                        <label class="form-check-label" for="card">Credit Card (Stripe)</label>
                    </div>
                    <div id="stripe-form" style="display: none;" class="mt-3">
                        <div class="form-group">
                            <label class="form-label">Card Number</label>
                            <input type="text" class="form-control" placeholder="4242 4242 4242 4242" id="card-number">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Expiry</label>
                                    <input type="text" class="form-control" placeholder="MM/YY" id="card-expiry">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">CVC</label>
                                    <input type="text" class="form-control" placeholder="123" id="card-cvc">
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="stripeToken" id="stripe-token" value="test_token">
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="checkout-card">
                    <h3>Order Summary</h3>
                    {% for item in cartItems %}
                        <div class="order-summary-item">
                            <div>
                                <strong>{{ item.product.Nom }}</strong>
                                <br>
                                <small class="text-muted">Qty: {{ item.quantity }}</small>
                            </div>
                            <div>
                                <strong>{{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} €</strong>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="order-summary-item" style="font-size: 1.2rem; font-weight: bold; border-top: 2px solid #333; margin-top: 1rem; padding-top: 1rem;">
                        <span>Total:</span>
                        <span>{{ total|number_format(2, ',', ' ') }} €</span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-check-circle"></i> Place Order
                </button>
                <a href="{{ path('app_cart') }}" class="btn btn-outline-secondary w-100 mt-2">
                    <i class="bi bi-arrow-left"></i> Back to Cart
                </a>
            </div>
        </div>
    </form>
</div>
{% endblock %}

